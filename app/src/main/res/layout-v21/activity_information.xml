<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".information.InformationActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/row_background"
        android:layout_margin="15dp"
        android:padding="15dp"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="136dp"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/general_info"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/studying_info"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center">
        </TextView>

        <ImageView
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:contentDescription="@string/default_description"
            app:srcCompat="@drawable/logo1000"
            android:layout_margin="20dp">

        </ImageView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/logo_info"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/font_info"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:fontFamily="@font/lobster"
            android:gravity="center">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/page_info"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:gravity="center">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/url_info"
            android:textColor="@color/purple_700"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:gravity="center">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/version"
            android:textSize="18sp"
            android:gravity="center">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/year_info"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:gravity="center">
        </TextView>

        <Button
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:text="@string/go_back"
            android:backgroundTint="@color/black"
            android:id="@+id/escape_information">

        </Button>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>