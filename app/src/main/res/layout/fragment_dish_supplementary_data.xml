<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/row_background"
    android:layout_margin="15dp"
    android:padding="15dp"
    tools:context=".DishCreation.DishSupplementaryDataFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cooking_time"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="20dp">

        </TextView>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/writing_background"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:lines="8"
            android:padding="5dp"
            android:maxLines="20"
            android:minLines="1"
            android:scrollbars="vertical"
            android:id="@+id/cooking_time_text"
            android:autofillHints="none"
            tools:ignore="LabelFor" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kilocalories"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="20dp">

        </TextView>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/writing_background"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:lines="8"
            android:padding="5dp"
            android:maxLines="20"
            android:minLines="1"
            android:id="@+id/calories_text"
            android:scrollbars="vertical"
            tools:ignore="LabelFor"
            android:autofillHints="none" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/marked_background"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/diet_type"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold">

        </TextView>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_vegetarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="30dp"
            android:text="@string/vegetarian_diet"
            android:textSize="18sp"
            app:switchPadding="50dp"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_vegan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="30dp"
            android:text="@string/vegan_diet"
            android:textSize="18sp"/>

    </TableRow>

</TableLayout>