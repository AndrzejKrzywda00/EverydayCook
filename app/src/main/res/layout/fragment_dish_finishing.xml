<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/row_background"
    tools:context=".DishCreation.DishFinishingFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/cancel1000"
                android:id="@+id/cancel_dish_button"
                android:contentDescription="@string/default_description">

            </ImageButton>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:id="@+id/erease_dish_button"
                android:background="@drawable/erease"
                android:contentDescription="@string/default_description">

            </ImageButton>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:id="@+id/confirm_dish_button"
                android:background="@drawable/confirm1000"
                android:contentDescription="@string/default_description">

            </ImageButton>

        </LinearLayout>

    </TableRow>

</TableLayout>